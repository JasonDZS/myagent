# Include the README and license files
include README.md
include LICENSE
include CLAUDE.md

# Include all Python files and packages
recursive-include myagent *.py
recursive-include myagent *.pyi

# Include example files
recursive-include examples *.py
recursive-include examples *.md

# Include documentation
recursive-include docs *

# Include requirements files
include requirements-*.txt
include *.txt

# Include configuration files
include pyproject.toml
include uv.lock
include .env.example

# Include trace viewer files
include trace_viewer.html
include trace_server.py
include setup_ws.py

# Exclude development and cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage